<h1>{{title}}</h1>
<table>
  <tr>
    <th>Song</th>
    <th>Artist</th>
    <th></th>
  </tr>
    {{#each songs}}
    <tr>
      <td><a href="songs/{{this._id}}">{{this.title}}</a></td>
      <td>{{this.artist}}</td>
      <td><a href="songs/{{this._id}}/edit"><button>Edit</button></a></td>
      <td>
        <form action="songs/{{this.id}}?_method=DELETE" method="post">
          <button type="submit" name="button">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
</table>
<br>
<a href="/songs/new"><button>Add New Song</button></a>
